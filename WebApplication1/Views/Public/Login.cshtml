@{
    ViewData["Title"] = "Войти";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model LoginModel

<div class="card mx-auto col-9 col-md-5 col-lg-3 py-3">
    <h2 class="text-center">Авторизация</h2>
    <form class="mx-auto d-flex flex-column" asp-controller="Public" asp-action="Login" method="post" style="width: 85%;">
        
        <label class="mt-0">Логин</label>
        <input class="form-control" asp-for="Login" type="text" placeholder="Введите логин"/>
        <span class="text-danger" asp-validation-for="Login"></span>

        <label class="mt-3">Пароль</label>
        <input class="form-control" asp-for="Password" type="password" placeholder="Введите пароль"/>
        <span class="text-danger" asp-validation-for="Password"></span>

        <input class="btn btn-primary mt-4" type="submit" value="Авторизоваться"/>
    </form>
</div>